@model IEnumerable<Wray_Tracker.ViewModels.CustomUserData>
@{
    ViewBag.Title = "ManageProjectAssignments";
}

<h2>@ViewBag.Title</h2>

<div class="container-fluid">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
       

        <div class="row">
            @* Left column that holds the users *@
            <div class="col">
                <select multiple class="form-group">
                    <option>@Html.ListBox("UserIds")</option>
                </select>
            </div>

            @* Right column for holding my Roles *@
        <div class="col">
            <select class="form-group">
                <option>@Html.DropDownList("ProjectIds")</option>
            </select>
        </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-dark" style="">Manage Project Assignments</button>
            </div>
        </div>
    }

    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Full Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayName("Projects")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => user.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => user.Email)
                    </td>
                    <td>
                        @foreach (var projName in user.ProjectNames)
                        {
                            @projName
                            <br />
                        }
                    </td>
                </tr>
            }
        </tbody>


    </table>
</div>