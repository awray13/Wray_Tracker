            dataType: "json"
        }).then(function (response) {
            var donutChartCanvas = $('#pieChart').get(0).getContext('2d');
            var donutData = {
                labels: response.Labels,
                datasets: [
                    {
                        data: response.Data,
                        backgroundColor: response.Colors
                    }
                ]
            };
