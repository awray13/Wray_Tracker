<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dragon Fly | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link href="~/Content/all.min.css" rel="stylesheet" />

    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- icheck bootstrap -->
    <link href="~/Content/icheck-bootstrap.min.css" rel="stylesheet" />

    <!-- Theme style -->
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />


    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Images/favicon-32x32.png">


</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img src="~/Images/onlinelogomaker-052320-1539-8719.png" width="360" />
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                @* Demo Admin *@
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post, new { @class="mb-n4"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoAdminEmail")

                    
                        <button type="submit" class="btn btn-block">
                            <div class="info-box">
                                <span class="info-box-icon bg-info elevation-1"><i class="fas fa-user-tie"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-number text-left">Admin</span>
                                    <span class="info-box-text text-left text-sm">Control over everything</span>
                                </div>
                            </div>
                        </button>
                    
                }


                @* Demo PM *@
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post, new { @class = "mb-n4" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoPMEmail")

                    <button type="submit" class="btn btn-block">
                        <div class="info-box">
                            <span class="info-box-icon bg-gradient-success elevation-1"><i class="fas fa-user-secret"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-number text-left">Project Manager</span>
                                <span class="info-box-text text-left text-sm">Manages projects and users</span>
                            </div>
                        </div>
                    </button>
                }

                @* Demo Dev *@
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post, new { @class = "mb-n4" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoDevEmail")


                    <button type="submit" class="btn btn-block">
                        <div class="info-box">
                            <span class="info-box-icon bg-gradient-orange text-white elevation-1"><i class="fas fa-laptop-code"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-number text-left">Developer</span>
                                <span class="info-box-text text-left text-sm">Manages assigned tickets</span>
                            </div>
                        </div>
                    </button>

                }

                @* Demo Sub *@
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoSubEmail")


                    <button type="submit" class="btn btn-block">
                        <div class="info-box mb-3">
                            <span class="info-box-icon bg-gradient-danger elevation-1"><i class="fas fa-headset"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-number text-left">Submitter</span>
                                <span class="info-box-text text-left text-sm">Creates new tickets</span>
                            </div>
                        </div>
                    </button>

                }
                <p class="mb-1">
                    <a href="@Url.Action("Login", "Account")" class="text-center">Already have an account</a>
                </p>
                <p class="mb-0">
                    <a href="@Url.Action("Register", "Account")" class="text-center">Register a new account</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- Bootstrap 4 -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte.min.js"></script>

    <!-- Sweet Alert -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
        var unconfirmedEmailError = '@TempData["UnconfirmedEmailError"]';
        if (unconfirmedEmailError != "") {
            Swal.fire({
                title: 'Account Error!',
                text: unconfirmedEmailError,
                icon: 'error',
                confirmButtonText: 'OK'
            })
        }
    </script>

</body>
</html>
